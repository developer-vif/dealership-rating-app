# Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration (used by application)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=dealership_ratings
DB_ADMIN_USER=postgres
DB_ADMIN_PASSWORD=your-secure-postgres-password
DB_USER=dealership_app
DB_PASSWORD=your-secure-app-password

# Redis Configuration
REDIS_URL=redis://redis:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-to-a-random-64-char-string
JWT_EXPIRES_IN=24h

# Google OAuth & Maps
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# reCAPTCHA
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# Application Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URL=https://orcr-agad.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100